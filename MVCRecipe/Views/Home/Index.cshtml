@{
    ViewData["Title"] = "Home Page";
}
    <head>
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <title>Recipe Search</title>
    </head>

    <main>
        <div class="text-center">

            <h1 class="display-4">Recipe Search</h1>

            <input type="text" name="query" id="query" />
            <button onclick="apiSearch()" id="search">Search</button>
            <br />

            <div id="results"></div>
        </div>
        <script>
            function saveRecipe(url) {
                var recipeLink = url;
                $.ajax({
                    data: recipeLink,
                    url: '@Url.Action("SaveRecipe", "Home", new { link = "${recipeLink}"})',
                    type: "POST"
                })
                    .done(function () {
                        alert("Saved to profile");
                    });
            }
        </script>
    </main>
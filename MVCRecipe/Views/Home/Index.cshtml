    <main>
        <div class="text-center">

            <h1 class="display-4">Recipe Search</h1>

            <input type="text" name="query" id="query" />
            <button onclick="apiSearch()" id="search">Search</button>
            <br />

            <div id="results"></div>
            <div id="hiddenLink"></div>
        </div>
        
    </main>
    <script type="text/javascript">
            function saveRecipe(btn) {
                var link = $(btn).val();


                $.ajax({
                    url: '@Url.Action("SaveRecipe", "Home")',
                    type: "POST",
                    data: {link: link}
                })
                    .done(function () {
                        alert("Saved to profile");
                    });
            }

